{
  "manifest_version": 3,
  "name": "Pollux",
  "version": "1.0.0",
  "description": "Use on-device AI to answer questions about the current page.",
  "minimum_chrome_version": "138",
  "icons": {
    "256": "res/gemini.png"
  },
  "side_panel": {
    "default_path": "src/sidebar.html"
  },
  "background": {
      "service_worker": "src/sw.js"
  },
  "permissions": ["sidePanel", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"]
}
